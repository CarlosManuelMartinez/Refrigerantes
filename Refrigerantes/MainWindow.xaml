<Window x:Class="Refrigerantes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Refrigerantes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Text="{Binding Nombre}">

        </TextBox>

        <DataGrid x:Name="DataGridProductos"
                  ItemsSource="{Binding TablaOperarios}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
        </DataGrid>

        <DataGrid ItemsSource="{Binding TablaOperarios}"
                  CanUserDeleteRows="false"
                  CanUserAddRows="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="True"
                  Height="200"
                  Margin="10"
                  />
    </Grid>

</Window>
